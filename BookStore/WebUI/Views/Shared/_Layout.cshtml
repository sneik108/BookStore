<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
</head>
<body>
    @*navbar-fixed-top*@
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Книжный магазин", "List", "Books", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Главная", "List", "Books", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Где мы (карта)", "Map", "Help", new { area = "HelpPages" }, null)</li>
                    <li>@Html.ActionLink("Про нас", "About", "Dashboard", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Контакты", "Contact", "Help", new { area = "HelpPages" }, null)</li>
                </ul>
                @Html.Partial("_LoginPartial")

                @Html.Action("Summary", "Cart")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="visible-xs">
            @Html.Action("Menu", "Nav", new { horizontalNav = true })
        </div>

        <div class="row panel">
            <div id="genres" class="col-sm-3 hidden-xs">
                @Html.Action("Menu", "Nav")
            </div>
            <div class="col-xs-12 col-sm-8">
                @RenderBody()
            </div>
        </div>
    </div>


</body>
</html>